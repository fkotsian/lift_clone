<% action = ( @goal.persisted? ? goal_url(@goal) : user_goals_url(current_user)  )  %>
<% method = ( @goal.persisted? ? "PATCH" 							: "POST"   )  %>
<% title =  ( @goal.persisted? ? "Edit Goal" 					: "New Goal"  )  %>
<% submit = ( @goal.persisted? ? "Update Goal" 				: "Create Goal"  )  %>

<h1><%= title %></h1>
<form action="<%= action %>" method="POST" accept-charset="utf-8">
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>">

	<input type="hidden" name="_method" value="<%= method %>">

	<label>Goal Title
		<input type="text" name="goal[title]" value="<%= @goal.title %>">
	</label>
	<br>

	<label>Goal Description
		<textarea name="goal[description]"><%= @goal.description %></textarea>
	</label>
	<br>

  <label>Public
	  <input type="radio" name="goal[public]" value="true" <%= "checked" if @goal.public %>>
	</label>

	<label>Private
	  <input type="radio" name="goal[public]" value="false" <%= "checked" if !@goal.public %>>
  </label>
	<br>

 	<input type="submit" value="<%= submit %>">
</form>
